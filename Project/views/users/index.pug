extends ../layouts/common
block content  
    h1 Users
        d-flex.align-items-center
        a.btn.btn-primary(href ="/users/create") New

        form.ml-aut(action="/users/search",method="GET", class="d-flex")
            input(type="text", name="q", class ="form-control")
            button(class="btn btn-primary ml-2 ") Search

        table.table
            tr
                th Name
                th Phone
                th Actions

            each user in users
               tr
                td=user.name
                td=user.phone
                td
                  a(href='/users/'+ user.id) View
